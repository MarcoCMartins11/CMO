    <!-- BotÃ£o Registar -->

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTil"
        android:layout_marginTop="210dp"
        android:text="Registar" />


</RelativeLayout>